{
  "version": 2,
  "regions": ["iad1"],
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "prisma/schema.prisma",
          "node_modules/.prisma/**",
          "node_modules/@prisma/client/**" 
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api-docs/swagger.json",
      "dest": "src/index.js",
      "headers": { 
        "Content-Type": "application/json",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "src/index.js",
      "headers": {
        "X-Frame-Options": "SAMEORIGIN",
        "X-Content-Type-Options": "nosniff"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE": "npx prisma generate"
    }
  },
  "headers": [
    {
      "source": "/api-docs/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https:; connect-src 'self' https: http:;"
        }
      ]
    }
  ]
}